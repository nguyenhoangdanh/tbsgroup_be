  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamp(0)

  @@unique([date, name], map: "unique_holiday")
  @@index([date], map: "idx_holiday_date")
  @@map("holidays")
}

// Cấu hình ca làm việc linh hoạt
model WorkSchedule {
