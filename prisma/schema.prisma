  userId        String    @map("user_id") @db.Uuid
  dayOfWeek     Int       @map("day_of_week") // 0-6 (Chủ nhật - Thứ bảy)
  startTime     String    @map("start_time") @db.VarChar(5) // "08:00"
  endTime       String    @map("end_time") @db.VarChar(5) // "17:00"
